{

  "build": {
    "devPath": "../src",
    "distDir": "../src",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "Cassette-music-player",
    "version": "1.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": false
      },
      "dialog": {
        "all": false,
        "ask": false,
        "confirm": true,
        "message": false,
        "open": false,
        "save": false
      }
    },
    "windows": [
      {
        "title": "Cassette",
        "width": 800,
        "height": 600,
        "fullscreen": false,
        "maximized": true
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets":"all",
      "identifier": "com.music-player.dev",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}
